{
  "version": 2,
  "builds": [
    {
      "src": "vercel-server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "views/**",
          "public/**",
          "plugins/**",
          "database/**",
          "utils/**",
          "routes/**",
          "middleware/**"
        ]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/plugins/static/(.*)",
      "dest": "/plugins/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/vercel-server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SESSION_SECRET": "@shadowcore_session_secret",
    "ADMIN_PASSWORD": "@shadowcore_admin_password"
  },
  "regions": ["bom1"]
}
