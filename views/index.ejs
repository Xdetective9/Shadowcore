        </div>
    </div>

    <!-- Featured Plugins -->
    <% if (plugins && plugins.length > 0) { %>
        <section style="margin: 4rem 0;">
            <h2 style="text-align: center; margin-bottom: 2rem;">ðŸŒŸ Featured Plugins</h2>
            <div class="plugin-grid">
                <% plugins.slice(0, 4).forEach(plugin => { %>
                    <div class="plugin-card">
                        <div class="plugin-header">
                            <div class="plugin-icon"><%= plugin.icon || 'ðŸ§©' %></div>
                            <h3><%= plugin.name %></h3>
                            <p style="color: rgba(255,255,255,0.7);"><%= plugin.description || 'No description' %></p>
                        </div>
                        <div class="plugin-body">
                            <div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
                                <% if (plugin.version) { %>
                                    <span class="badge">v<%= plugin.version %></span>
                                <% } %>
                                <% if (plugin.author) { %>
                                    <span class="badge" style="background: rgba(139, 92, 246, 0.2);">
                                        <%= plugin.author %>
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        <div class="plugin-footer">
                            <a href="/plugins/<%= plugin.id %>" class="btn btn-sm btn-primary" style="flex: 1;">
                                View Details
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <div style="text-align: center; margin-top: 2rem;">
                <a href="/plugins" class="btn btn-secondary">
